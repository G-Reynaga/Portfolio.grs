---
import GitHub from "./icons/GitHub.astro";
import Link from "./icons/Link.astro";
import Play from "./icons/PLay.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Css from "./icons/Css.astro";
import React from "./icons/React.astro";
import Redux from "./icons/Redux.astro";
import TypeScript from "./icons/Typescript.astro";
import NestJS from "./icons/NestJS.astro";
import LinkButton from "./LinkButton.astro";
import Node from "./icons/Node.astro";
import Express from "./icons/Express.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-[#161A30] text-white",
    icon: NextJS,
  },
  REACT: {
    name: "React",
    class: "bg-[#10439F] text-white",
    icon: React,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#3468C0] text-white",
    icon: Css,
  },
  REDUX: {
    name: "Redux",
    class: "bg-[#430A5D] text-white",
    icon: Redux,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-[#10439F] text-white",
    icon: TypeScript,
  },
  NEST: {
    name: "Nest.js",
    class: "bg-[#5D0E41] text-white",
    icon: NestJS,
  },
  NODE: {
    name: "Node.js",
    class: "bg-[#004225] text-white",
    icon: Node,
  },
  EXPRESS: {
    name: "Express",
    class: "bg-[#151515] text-white",
    icon: Express,
  },
};
const PROJECTS = [
  {
    title: "Cobox Logistic",
    description: `Cobox logistic es una innovadora plataforma de logística creada para simplificar y optimizar el proceso de contratación de repartidores por parte de comercios y empresas.
    La plataforma permite a los comercios gestionar sus entregas de manera eficiente, 
    conectándolos con una red de repartidores disponibles en tiempo real.`,
    link: "https://www.coboxlogistic.com/",
    image: "/projects/cobox.webp",
    tags: [TAGS.NEXT, TAGS.TYPESCRIPT, TAGS.NEST],
  },
  {
    title: "The Wave",
    description: `The Wave es una plataforma de ecommerce diseñada específicamente para los entusiastas del surf, 
    ofreciendo una amplia gama de productos que incluyen tablas de surf, aletas, trajes de neopreno, y otros accesorios relacionados.`,
    link: "https://proyecto-the-wave-client-1kip.vercel.app/",
    github: "https://github.com/G-Reynaga/Proyecto_TheWave_client",
    video: "https://vimeo.com/825269857",
    image: "/projects/the_wave.webp",
    tags: [TAGS.REACT, TAGS.CSS, TAGS.REDUX, TAGS.NODE, TAGS.EXPRESS],
  },
  {
    title: "Poke API",
    description: `Proyecto donde se realizo el consumo de la API pokeApi en la cual tiene como incio un landing page luego se podra ver las cards, 
    se logra hacer busquedas hasta hay un formulario para poder agregar un 'pokemon' nuevo`,
    link: "https://reynaga-pi-pokemon.vercel.app/",
    github: "https://github.com/G-Reynaga/PI-Pokemon",
    video: "https://vimeo.com/825124626?share=copy",
    image: "/projects/PI_Pokemon.webp",
    tags: [TAGS.REACT, TAGS.CSS, TAGS.REDUX, TAGS.NODE, TAGS.EXPRESS],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github, video }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2 content-center">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Imagenes de Projectos"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-2 flex-wrap">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-4 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
              {video && (
                <LinkButton href={video}>
                  <Play class="size-6" />
                  Video
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
